{
  "name": "yamakenji",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "run-s build:posts build:works build:next",
    "build:posts": "ts-node --project tsconfig.builder.json ./src/builder/posts.ts",
    "build:works": "ts-node --project tsconfig.builder.json ./src/builder/works.ts",
    "build:next": "next build",
    "start": "next start",
    "prettier:quick": "pretty-quick --staged",
    "lint": "next lint --ignore-path .gitignore --dir src",
    "lint:fix": "next lint --ignore-path .gitignore --fix",
    "fmt": "prettier --write --ignore-path .gitignore 'src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:upd": "jest --updateSnapshot",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "type-check": "tsc",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.0.15",
    "@chakra-ui/react": "^1.6.8",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "axios": "^0.21.1",
    "framer-motion": "^4.1.17",
    "next": "^12.3.1",
    "open-graph-scraper": "^4.9.2",
    "playwright-aws-lambda": "^0.7.0",
    "playwright-core": "^1.15.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/react": "^12.1.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.21",
    "@types/open-graph-scraper": "^4.8.1",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "cypress": "^8.5.0",
    "eslint": "^7.9.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.31.8",
    "fs-extra": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^27.0.2",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "rss-parser": "^3.12.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run fmt"
    ]
  }
}
